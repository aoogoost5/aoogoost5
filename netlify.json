{
  "build": {
    "command": "npm run build",
    "publish": ".next",
    "environment": {
      "NODE_VERSION": "16",
      "NPM_VERSION": "8"
    }
  },
  "plugins": [
    {
      "package": "@netlify/plugin-nextjs"
    }
  ],
  "headers": [
    {
      "for": "/*",
      "values": {
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      }
    }
  ],
  "redirects": [
    {
      "from": "/*",
      "to": "/index.html",
      "status": 200,
      "force": false
    }
  ]
} 